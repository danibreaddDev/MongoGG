{% extends 'base.html.twig' %}

{% block title %}
	Fortnite
{% endblock %}
{% block body %}
{% if app.user %}
		<div class=" ms-5 mt-2 me-5 text-white">
			<div class="d-flex justify-content-between align-items-center">
				<div>
					<span class="fw-bold mt-2">{{ app.user.userIdentifier }}-{{app.user.UltimoAcceso|date("d/m/Y")}}</span>
				</div>
				<div>
					{% if is_granted('ROLE_ADMIN') %}
						<a href="{{ path('app_user_index') }}" class="btn btn-success mt-2">Users List</a>
					{% endif %}
					<a href="{{ path('app_cuentas_index') }}" class="btn btn btn-primary mt-2">Game Accounts</a>
					<a href="{{ path('app_logout') }}" class="btn btn-secondary mt-2">Logout</a>
				</div>
			</div>
		</div>


	{% else %}

		<div class="container pt-2 me-5">
			<div class="row justify-content-end">

				<a href="{{ path('app_login') }}" class="btn btn-secondary m-2">Login</a>

			</div>
		</div>
	{% endif %}
	<div class="container">
		<a class="btn btn-primary bg-dark mt-5" href="{{ path('app_main') }}">Return</a>
	</div>
	<div class="container mt-4 text-center text-white">
		<div class="row">
			<div class="d-flex flex-wrap justify-content-center">
				<h1 class="text-white">FORTNITE</h1>
				<img src="{{ asset('images/fortnite.png') }}" alt="icono" class="img-fluid ms-3" style="width:60px; heigth:60px;"/>
			</div>
		</div>
         <div class="row">
        <div class="col-md-6">
            {% include 'comunes/_MenuFortnite.html.twig'%}
        </div>
        <div class="col-md-6">
            {% include 'comunes/_BarraBusquedaFortnite.html.twig'%}
        </div>
    </div>
	</div>
{% endblock %}
