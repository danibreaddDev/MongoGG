{% extends 'base.html.twig' %}

{% block title %}{% endblock %}
{% block body %}
<div class="container">
		<a class="btn btn-primary bg-dark mt-5" href="{{ path('app_valorant') }}">Return</a>
	</div>

	<div class="container mt-4 text-center">

		{% for index, temporada in temporadas %}
			{% set startDate = temporada.startTime|split('T')[0] %}
			{% set endDate = temporada.endTime|split('T')[0] %}

			{% if index == temporadas|length - 3 %}
				<h2 class="text-white">ACTUAL SEASON</h2>
				<div class="card bg-dark text-white mb-3">
					<div class="card-header">Season Dates</div>
					<div class="card-body">
						<p class="card-text">Start:
							{{ startDate }}
							- End:
							{{ endDate }}</p>
					</div>
				</div>

				<h4 class="text-white mt-5">Borders</h4>
				<div class="row mt-5">
					{% for border in temporada.borders %}
						<div class="col-md-2 mb-4 align-items-center">
							<div class="card bg-dark text-white" style="width: 12rem;">
								<img src="{{ border.displayIcon }}" class="card-img-top mx-auto" alt="{{ border.displayIcon }}" style="max-width: 100px; max-height: 100px;">
								<div class="card-body text-center">
									<p class="card-title text-white">Level:
										{{ border.level }}</p>
									<p class="card-text text-white">Wins Required:
										{{ border.winsRequired }}</p>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			{% endif %}

			{% if index == temporadas|length - 2 %}
				<h2 class="text-white mt-5">NEXT SEASON</h2>
				<div class="card bg-dark text-white mb-3">
					<div class="card-header">Season Dates</div>
					<div class="card-body">
						<p class="card-text">Start:
							{{ startDate }}
							- End:
							{{ endDate }}</p>
						<p class="card-text">No Information Available</p>
					</div>
				</div>
			{% endif %}
		{% endfor %}
	</div>
{% endblock %}
