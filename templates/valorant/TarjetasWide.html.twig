{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5 text-center">
    <div class="row">
        {% for tarjeta in tarjetas %}
        <div class="col-md-4 mb-4">
            <div class="card bg-dark">
                <img src="{{ tarjeta.wideArt }}" class="card-img-top" alt="{{ tarjeta.displayName }}">
                <div class="card-body text-center p-2 rounded">
                    <h5 class="card-title text-white">{{ tarjeta.displayName }}</h5>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
