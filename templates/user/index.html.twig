{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <div class="container">
		<a class="btn btn-primary bg-dark mt-5" href="{{ path('app_main') }}">Return</a>
	</div>
	<div class="container text-white text-center">
		<h1>USERS</h1>

    <table class="table table-dark table-striped" style="animation: fadeIn 1s ease-in-out;">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Email</th>
                <th scope="col">Roles</th>
                <th scope="col">Password</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-secondary btn-sm">edit User</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_user_new') }}"class="btn btn-success">Add new User</a>
{% endblock %}
